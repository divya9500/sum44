#Program all inbuilt string functions such a length,substring,toLower,isUpper,reverse,split,contains,containsIgnoreCase,StartsWith,EndsWith etc


package Assessment;

import java.util.Locale;
import java.util.Scanner;

public class StringFunctions {
    public static void main(String args[]){
        Scanner s=new Scanner(System.in);
        System.out.println("enter the String");
        String s1=s.next();
        int l=s1.length();
        System.out.println(l);
        String s2=s1.substring(3);
        System.out.println(s2);
        String a=s1.toLowerCase();
        System.out.println(a);
        String a1=s1.toUpperCase();
        System.out.println(a1);
        String s3=s1.concat("divya");
        System.out.println(s3);
        String s4="  divya  ";
        System.out.println(s4.trim());
        String ss="DIVYA";
        System.out.println("equals: "+s1.equals(ss));
        System.out.println("Equals ignore case: "+s1.equalsIgnoreCase(ss));
        System.out.println("Starts with:"+s1.startsWith("div"));
        System.out.println("Ends with:"+s1.endsWith("ya"));


    }
}
